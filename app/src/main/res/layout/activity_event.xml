<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.EventActivity">
    <com.example.secondkotlin.event.MyButton
        android:id="@+id/btn_my1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0066ff"
        android:text="MyButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <com.example.secondkotlin.event.MyButton
        android:id="@+id/btn_my2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0066ff"
        android:layout_margin="10dp"
        android:text="MyButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_my1" />
</androidx.constraintlayout.widget.ConstraintLayout>